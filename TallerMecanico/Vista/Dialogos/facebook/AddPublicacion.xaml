<Window x:Class="TallerMecanico.Vista.Dialogos.facebook.AddPublicacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TallerMecanico.Vista.Dialogos.facebook"
        xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="AddPublicacion" Height="450" Width="800">
    <StackPanel>
         <TextBlock x:Name="nombre" Text="NombreUsuario" FontSize="25" FontWeight="Bold"/>

        <TextBox material:HintAssist.Hint="Introduzca el texto a publicar" Margin="20" />
        <Button Content="PUBLICAR" Click="Button_Click" Margin="20"/>
        <!--<WebBrowser Name="wBrowser" Navigated="WBrowser_Navigated"/>-->
    </StackPanel>
</Window>
